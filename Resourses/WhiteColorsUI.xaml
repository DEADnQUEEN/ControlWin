<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="Background" Color="#F2F2F3"/>
    <SolidColorBrush x:Key="MainColor" Color="#2998D4"/>
    <SolidColorBrush x:Key="PrimaryColor" Color="#CD2E6D"/>
    <Label x:Key="State" Content="🔆"
           Foreground="{StaticResource Background}"
           Padding="0"
           FontSize="13"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"/>
    <Label x:Key="Close" Content="❌"/>
    <Label x:Key="Minimize" Content="➖"/>
</ResourceDictionary>
