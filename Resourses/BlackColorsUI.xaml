<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="Background" Color="#2F3339"/>
    <SolidColorBrush x:Key="MainColor" Color="#2998D4"/>
    <SolidColorBrush x:Key="PrimaryColor" Color="#CD2E6D"/>
    <LinearGradientBrush x:Key="LeftTriggerBrush">
        <GradientStop Color="#CD2E6D" Offset="{DynamicResource LeftTriggerValue}"/>
        <GradientStop Color="#2998D4" Offset="{DynamicResource LeftTriggerValue}"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="RightTriggerBrush">
        <GradientStop Color="#CD2E6D" Offset="{DynamicResource RightTriggerValue}"/>
        <GradientStop Color="#2998D4" Offset="{DynamicResource RightTriggerValue}"/>
    </LinearGradientBrush>
    <Label x:Key="Close" Content="❌"/>
    <Label x:Key="State" Content="🌑"
           Foreground="{StaticResource Background}"
           Padding="0, 0, 0, 0"
           FontSize="13"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"/>
    <Label x:Key="Minimize" Content="➖"/>
</ResourceDictionary>
